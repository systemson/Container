{
    "name": "amber/container",
    "description": "Simple PHP DI Container.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Deivi PeÃ±a",
            "email": "systemson@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Amber\\Container\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.2.0",
        "amber/collection": "^0.6@beta",
        "amber/validator": "^0.1@dev",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^4.2"
    },
    "scripts": {
        "test": "phpunit",
        "docs": "php sami.phar update samiConfig.php -v",
        "sniff": "phpcs --standard=PSR2 ./src ./tests",
        "fix-cs": "phpcbf --standard=PSR2 ./src ./tests",
        "type-hint": "psalm --show-info=false",
        "pull": [
            "git pull",
            "composer update -vvv"
        ],
        "full-check": [
            "@test",
            "@docs",
            "@sniff"
        ],
        "post-update-cmd": [
            "@test"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "process-timeout": 0
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.x-dev"
        }
    }
}
